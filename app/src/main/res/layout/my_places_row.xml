<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="180dp"
    android:foreground="@drawable/green_bottom_background">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:text="Large Text"
            android:id="@+id/my_places_city"
            android:textSize="34sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/my_places_country"
            android:layout_alignStart="@+id/my_places_country"
            fontPath="fonts/Orbitron-Regular.ttf"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:id="@+id/my_places_country"
            android:layout_below="@+id/my_places_city"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:textSize="24dp"
            android:textIsSelectable="false"
            fontPath="fonts/Orbitron-Bold.ttf"/>

    </RelativeLayout>

</FrameLayout>
