<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="16dp"
    android:background="@drawable/green_bottom_background"
    android:paddingLeft="@dimen/profile_stats_location_view_horizontal_padding"
    android:paddingRight="@dimen/profile_stats_location_view_horizontal_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Average Distance: 8908 mi"
        android:id="@+id/profile_stats_location_average_distance"
        android:gravity="center_horizontal"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:layout_gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="St. KahazhastanVille"
                    android:id="@+id/profile_stats_location_city"
                    fontPath="fonts/Orbitron-Regular.ttf"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="He&apos;s not my president"
                    android:id="@+id/profile_stats_location_country"
                    android:layout_marginTop="10dp"
                    fontPath="fonts/Orbitron-Regular.ttf"
                    android:textSize="32sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/profile_stats_location_map_frame"
            android:layout_marginTop="16dp">

        </FrameLayout>
    </LinearLayout>
</LinearLayout>